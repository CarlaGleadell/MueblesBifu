{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "run tests",
            "type": "shell",
            "command": "vendor/bin/phpunit --bootstrap vendor/autoload.php tests",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": ["$phpunit"],
            "presentation": {
                "reveal": "always"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            }
        }
    ]
}
